<p>
  <strong>Message:</strong>
  <%=simple_format(@post.message) %>
</p>

<%= link_to 'Comment', new_post_comment_path(@post) %>
<p>
  <% @post.comments.each do |comment| %>
  <span> <%= User.find(comment.user_id).name %> commented:
  <%= comment.body %> </span>
  <br>
  <% end %>
</p>

<span class='pull-right'>
  <%= link_to like_post_path(@post, like: true), method: 'post', remote: true do %>
    👍
    <span id="post_<%= @post.id %>_likes">Likes (<%= @post.likes.size %>)</span>
  <% end %>
</span>

<% if @post.user_id == current_user.id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Destroy', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', posts_path %>
