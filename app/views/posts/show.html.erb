<p>
  <strong>Message:</strong>
  <%=simple_format(@post.message) %>
</p>

<article id='likes'>
  <span id='likes-count'>
    Likes: <span id='likes-number'><%= @post.likes.count %></span>
  </span>
  <span id='likes-button'>
    <% user_like = @post.likes.find { |like| like.user_id == current_user.id } %>
    <% if user_like %>
    <%= button_to 'Unlike', post_like_path(@post.id, user_like), method: :delete, class: 'like-button' %>
    <% else %>
    <%= button_to 'Like', post_likes_path(@post.id), method: :post, class: 'like-button' %>
    <% end %>
  </span>
</article>
<br>

<br>
<%= link_to 'Comment', new_post_comment_path(@post) %>
<p>
  <% @post.comments.each do |comment| %>
  <span> <%= User.find(comment.user_id).name %> commented:
  <%= comment.body %> </span>
  <br>
  <% end %>
</p>

<% if @post.user_id == current_user.id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Destroy', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', posts_path %>
