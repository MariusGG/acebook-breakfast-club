<h1>Listing posts</h1>

<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Message</th>
  </tr>

  <% @posts.reverse.each do |post| %>
    <tr>
      <td><strong><%= post.message %></strong></td>
      <td><i><%= User.find(post.user_id).name %></i></td>
      <td><%= post.created_at.asctime %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <% if post.user_id == current_user.id %>
         <td><%= link_to 'Edit', edit_post_path(post) %></td>
         <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <article>

        <span>
          <%= form_with(model: [post, post.likes.build ], local: true) do |form| %>
          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.submit 'Like' %>
          <% end %>
        </span>
        <span>
          (<%= post.likes.count %>)
        </span>
      </article>
      <td><%= link_to "Comment", new_post_comment_path(post) %></td>
    </tr>
  <% end %>
</table>
