<h1>Listing posts</h1>

<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Message</th>
  </tr>

  <% @posts.reverse.each do |post| %>
    <tr>
      <td><strong><%= post.message %></strong></td>
      <td><i></i></td>
      <td><%= post.created_at.asctime %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <% if post.user_id == current_user.id %>
         <td><%= link_to 'Edit', edit_post_path(post) %></td>
         <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <% end %>
          <td id='like-home'>
            <span class='like-button' id='like-form-home'>
              <% user_like = post.likes.find { |like| like.user_id == current_user.id } %>

              <% if user_like %>
                <%= form_with model: [post, user_like], local: true, method: :delete, html: { id: :unlike_form } do |form| %>
                  <%= form.hidden_field :user_id, value: current_user.id %>
                  <%= form.submit 'Unlike' %>
                <% end %>
              <% else %>
                <%= form_with model: [post, post.likes.build], local: true, html: { id: :like_form } do |form| %>
                  <%= form.hidden_field :user_id, value: current_user.id %>
                  <%= form.submit 'Like' %>
                <% end %>
              <% end %>
            </span>
            <span id='like-count-home'>
              (<%= post.likes.count %>)
            </span>
          </td>
      <td><%= link_to "Comment", new_post_comment_path(post) %></td>
    </tr>
  <% end %>
</table>
