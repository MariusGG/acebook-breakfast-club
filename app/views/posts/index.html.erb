<h1>Listing posts</h1>

<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Message</th>
  </tr>

  <% @posts.reverse.each do |post| %>
    <tr>
      <td><strong><%= post.message %></strong></td>
      <td><i></i></td>
      <td><%= post.created_at.asctime %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <% if post.user_id == current_user.id %>
         <td><%= link_to 'Edit', edit_post_path(post) %></td>
         <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <% end %>
          <td id='like-home'>
            <span class='like-button' id='like-form-home'>
              <% user_like = post.likes.find { |like| like.user_id == current_user.id } %>
              <% if user_like %>
              <%= button_to 'Unlike', post_like_path(post.id, user_like), method: :delete, class: 'like-button' %>
              <% else %>
              <%= button_to 'Like', post_likes_path(post.id), method: :post, class: 'like-button' %>
              <% end %>
            </span>
            <span id='like-count-home'>
              (<%= post.likes.count %>)
            </span>
          </td>
      <td><%= link_to "Comment", new_post_comment_path(post) %></td>
    </tr>
  <% end %>
</table>
